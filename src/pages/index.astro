---
import BaseLayout from '@layouts/BaseLayout.astro';
import ArticleCard from '@components/ArticleCard.astro';
import NewsletterSignup from '@components/NewsletterSignup.astro';
import { getCollection } from 'astro:content';
import { filterDrafts, getFeaturedArticles } from '@/utils/content';
import { sortByDate } from '@/utils/date';

const allArticles = await getCollection('articles');
const publishedArticles = filterDrafts(allArticles);
const featuredArticles = getFeaturedArticles(publishedArticles).slice(0, 3);
const recentArticles = sortByDate(publishedArticles).slice(0, 6);
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">ProductBuilders.io</h1>
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed">
        Insights and resources for product managers, designers, and engineers building exceptional
        products together.
      </p>
      <a href="/articles" class="btn bg-white text-blue-600 hover:bg-gray-100 text-lg">
        Explore Articles
      </a>
    </div>
  </section>

  <!-- Featured Articles -->
  {
    featuredArticles.length > 0 && (
      <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Featured Articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {featuredArticles.map((article) => (
            <ArticleCard article={article} />
          ))}
        </div>
      </section>
    )
  }

  <!-- Recent Articles -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Recent Articles</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {recentArticles.map((article) => <ArticleCard article={article} />)}
    </div>
    {
      recentArticles.length > 0 && (
        <div class="text-center mt-12">
          <a href="/articles" class="btn btn-primary text-lg">
            View All Articles
          </a>
        </div>
      )
    }
  </section>

  <!-- Newsletter Signup -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <NewsletterSignup />
    </div>
  </section>

  <!-- Value Proposition -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Why ProductBuilders.io?</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Great products are built at the intersection of product management, design, and engineering.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="text-center p-6">
        <div class="w-16 h-16 bg-pm-light rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-pm" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"
            ></path>
            <path
              fill-rule="evenodd"
              d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"
              clip-rule="evenodd"
            ></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Product Management</h3>
        <p class="text-gray-600">
          Strategy, roadmapping, user research, and metrics that drive product decisions.
        </p>
      </div>

      <div class="text-center p-6">
        <div class="w-16 h-16 bg-design-light rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-design" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
              clip-rule="evenodd"
            ></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Design</h3>
        <p class="text-gray-600">
          UX/UI principles, design systems, and user-centered design methodologies.
        </p>
      </div>

      <div class="text-center p-6">
        <div class="w-16 h-16 bg-engineering-light rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-engineering" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            ></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Engineering</h3>
        <p class="text-gray-600">
          Architecture, best practices, and technical leadership for building great products.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
