---
import type { CollectionEntry } from 'astro:content';
import {
  formatDate,
  getDisciplineColor,
  getDisciplineLabel,
  calculateReadingTime,
  getWordCount,
} from '../utils';

interface Props {
  article: CollectionEntry<'articles'>;
}

const { article } = Astro.props;
const {
  title,
  description,
  publishDate,
  author,
  disciplines,
  heroImage,
  heroImageAlt,
} = article.data;

// Calculate reading time from content body
const readingTime = calculateReadingTime(getWordCount(article.body));
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  {
    heroImage && (
      <a href={`/articles/${article.slug}`} class="block">
        <img
          src={heroImage}
          alt={heroImageAlt || title}
          class="w-full h-48 object-cover"
          loading="lazy"
        />
      </a>
    )
  }

  <div class="p-6">
    <!-- Discipline badges and date -->
    <div class="flex items-center gap-2 mb-3 flex-wrap">
      {
        disciplines.map((discipline) => (
          <span class={`badge-${getDisciplineColor(discipline)}`}>
            {getDisciplineLabel(discipline)}
          </span>
        ))
      }
      <time class="text-sm text-gray-500" datetime={publishDate.toISOString()}>
        {formatDate(publishDate)}
      </time>
    </div>

    <!-- Title -->
    <h3 class="text-xl font-bold text-gray-900 mb-2">
      <a href={`/articles/${article.slug}`} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h3>

    <!-- Description -->
    <p class="text-gray-600 mb-4 line-clamp-3">{description}</p>

    <!-- Meta info -->
    <div class="flex items-center justify-between">
      <span class="text-sm text-gray-500">
        {readingTime} min read &middot; By {author}
      </span>
      <a
        href={`/articles/${article.slug}`}
        class="text-blue-600 hover:text-blue-800 text-sm font-medium transition-colors"
      >
        Read more &rarr;
      </a>
    </div>
  </div>
</article>
