---
// TODO: Phase 2 - Implement book grid component
// This component will display a grid of book review cards
import type { CollectionEntry } from 'astro:content';
import BookCard from './BookCard.astro';

interface Props {
  books: CollectionEntry<'books'>[];
}

const { books } = Astro.props;
---

<div class="bg-yellow-50 border-2 border-yellow-400 rounded-lg p-6 mb-8">
  <p class="text-yellow-800 font-semibold mb-2">Phase 2: Book Grid Component</p>
  <p class="text-yellow-700 text-sm">
    This component will display a responsive grid of book review cards with filtering and sorting
    capabilities.
  </p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {books.map((book) => <BookCard book={book} />)}
</div>

{
  books.length === 0 && (
    <div class="text-center py-12">
      <p class="text-gray-500">No books found. Phase 2 content coming soon.</p>
    </div>
  )
}
