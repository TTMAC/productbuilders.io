---
// TODO: Phase 2 - Implement book review layout
// This layout will display book reviews with ratings, cover images, and purchase links
import BaseLayout from './BaseLayout.astro';
import RatingStars from '@components/RatingStars.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  book: CollectionEntry<'books'>;
}

const { book } = Astro.props;
const { Content } = await book.render();
---

<BaseLayout title={book.data.title}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Phase 2 indicator -->
    <div class="bg-yellow-50 border-2 border-yellow-400 rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-bold text-yellow-900 mb-4">Phase 2: Book Review Layout</h2>
      <p class="text-yellow-800 mb-4">
        This layout will display book reviews with enhanced features:
      </p>
      <ul class="list-disc list-inside text-yellow-700 space-y-2">
        <li>Visual star ratings with RatingStars component</li>
        <li>Book cover images and metadata display</li>
        <li>Cross-functional value highlighting</li>
        <li>Key takeaways as callout boxes</li>
        <li>Purchase links with affiliate tracking</li>
        <li>Related book recommendations</li>
      </ul>
    </div>

    <!-- Stub book review content -->
    <article>
      <header class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{book.data.title}</h1>
        <p class="text-lg text-gray-600 mb-4">By {book.data.bookAuthor}</p>

        <div class="flex items-center gap-4 mb-4">
          <RatingStars rating={book.data.rating} size="lg" />
          <span class="text-sm text-gray-600">
            {book.data.discipline} &middot; {book.data.level}
          </span>
        </div>

        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6">
          <p class="text-sm font-semibold text-blue-900 mb-1">Cross-Functional Value</p>
          <p class="text-blue-800">{book.data.crossFunctionalValue}</p>
        </div>
      </header>

      <div class="prose-custom">
        <Content />
      </div>

      <div class="mt-8 bg-gray-50 rounded-lg p-6">
        <h3 class="text-xl font-bold mb-4">Key Takeaways</h3>
        <ul class="space-y-2">
          {book.data.keyTakeaways.map((takeaway) => (
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>{takeaway}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="mt-8 border-t pt-6">
        <h4 class="font-semibold mb-2">Who Should Read This</h4>
        <p class="text-gray-700">{book.data.whoShouldRead}</p>
      </div>

      {book.data.affiliateLink && (
        <div class="mt-6">
          <a
            href={book.data.affiliateLink}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            Purchase on Amazon &rarr;
          </a>
        </div>
      )}

      <footer class="mt-12 pt-8 border-t border-gray-200">
        <a
          href="/books"
          class="text-blue-600 hover:text-blue-800 font-medium transition-colors"
        >
          &larr; Back to book reviews
        </a>
      </footer>
    </article>
  </div>
</BaseLayout>
